{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work the Spotify Web API",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/*.js",
    "test": "mocha tests/**/*.spec.js --require @babel/register",
    "test:tdd": "mocha tests/**/*.spec.js --require @babel/register --watch",
    "test:coverage": "nyc npm test -- --exit"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "./node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/murilosandiego/spotify-wrapper.git"
  },
  "keywords": [
    "js",
    "tdd"
  ],
  "author": "Murilo Sandiego <contato@murilosandiego.com.br> (http://murilosandiego.com.br/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/murilosandiego/spotify-wrapper/issues"
  },
  "homepage": "https://github.com/murilosandiego/spotify-wrapper#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:coverage"
    }
  }
}
